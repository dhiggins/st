%div{:style => "display: block;"}
  %div{:style => "float: left;"}
    = image_tag "#{image_path('icons/two.gif')}"
  %h2.numbered
    Find Us on Your Networks.
  .indent
    .indent
      %h3
        Share information about us there.

      %div{:style => "display: block; margin-top: 25px;"}
        %div{:style => "float: left; margin-left: 35px;"}
          / Twitter badge START
          %script{ :src => "http://widgets.twimg.com/j/2/widget.js" }
          %script
            = "new TWTR.Widget({version: 2, type: 'profile', rpp: 4, interval: 6000, width: 250, height: 300, theme: { shell: { background: '#333333', color: '#ffffff' }, tweets: { background: '#ffffff', color: '#575457', links: '5b92ed4' } }, features: { scrollbar: false, loop: false, live: false, hashtags: true, timestamp: true, avatars: false, behavior: 'all' }}).render().setUser('SaveTogether').start();"
          / Twitter badge END

        %div{:style => "float: left; margin-left: 35px;"}
          / Facebook badge START
          - fb_server_and_protocol = (is_ssl? ? "https://www.connect.facebook.com" : "http://static.ak.facebook.com")
          %script{:type => "text/javascript", :src => "#{fb_server_and_protocol}/js/api_lib/v0.4/FeatureLoader.js.php/en_US"}
          %script{:type => "text/javascript"}
            - if is_ssl?
              FB.init("f706afc45926e36c80c5def2e444ef84", "integrations/xd_receiver_ssl.html");
            - else
              FB.init("f706afc45926e36c80c5def2e444ef84")
          %fb:fan{:profile_id => "201523205283", :stream => "1", :connections => "", :width => "290"}
          %div{:style => "font-size:8px; padding-left:10px"}
            %a{:href => "http://www.facebook.com/pages/SaveTogether/201523205283"}
              SaveTogether
            on Facebook
          / Facebook Badge END

        %div{:style => "float: left; margin-left: 35px;"}
          / LinkedIn badge START
          %a{:href => "http://www.linkedin.com/groups?gid=1622727"}
            %img{:src => "#{current_request_protocol}://www.linkedin.com/img/webpromo/btn_viewmy_160x33.gif", :width => "160", :height => "33", :border => "0", :alt => "View SaveTogether's profile on LinkedIn"}
          / LinkedIn Badge END
