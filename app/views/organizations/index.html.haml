- @page_title = :match_savers.l.titleize

.content
  %h1
    ="Partner Organizations"
    %span{:style => "font-size: 16px; font-weight: normal;"}
      = link_to '(Partner Signup&raquo;)', new_organization_path

  .block{:style => "margin-top: 10px;"}
    .single-column

      .pagination.upper
        = paginating_links @orgs, :params => params if @orgs.page_count > 1

      = render :partial => "organizations/list", :locals => {:orgs => @orgs}

      .pagination.lower
        = paginating_links @orgs, :params => params if @orgs.page_count > 1
